<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Label="PropertySheets" />
  <PropertyGroup Label="UserMacros" />
  <PropertyGroup>
    <ExtensionsToDeleteOnClean>$(ExtensionsToDeleteOnClean);*.dll;</ExtensionsToDeleteOnClean>
  </PropertyGroup>
  <ItemDefinitionGroup>
    <ClCompile />
    <Link />
    <ClCompile />
    <Link>
      <AdditionalLibraryDirectories>%(AdditionalLibraryDirectories);$(SolutionDir)Shared\Lib;</AdditionalLibraryDirectories>
      <AdditionalDependencies>%(AdditionalDependencies);glew32.lib;freeglutd.lib;freeglut.lib;</AdditionalDependencies>
    </Link>
    <PostBuildEvent>
      <Command>xcopy "$(SolutionDir)Shared\DLL\*.dll" "$(TargetDir)" /D /K /Y</Command>
    </PostBuildEvent>
    <PostBuildEvent>
      <Message>Copy DLLs to Target Directory</Message>
    </PostBuildEvent>
    <ClCompile>
      <AdditionalIncludeDirectories>%(AdditionalIncludeDirectories);$(SolutionDir)Shared\Include;</AdditionalIncludeDirectories>
    </ClCompile>
  </ItemDefinitionGroup>
  <ItemGroup />
</Project>